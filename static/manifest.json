{
    "manifest_version": 2,

    "name": "Tutohunt",
    "description": "Track your online learning progress and organize online learning resources",
    "version": "1.0",

    "browser_action": {
        "default_icon": "logo128.png",
        "default_popup": "popup.html"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/vendor.js", "js/content_script.js"]
        }
    ],

    "background": {
        "scripts": ["js/background.js", "js/vendor.js"]
    },

    "permissions": ["storage"],

    "content_security_policy": "default-src 'self' http://localhost:8097; style-src 'unsafe-inline'; connect-src ws://localhost:8097 "
}
